---
import Layout from "../layouts/Layout.astro";
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.park_youth;
---

<Layout title={page.title}>
	<div class="max-w-5xl mx-auto px-4 py-20 space-y-8">
		<h1 class="theme-display-font text-5xl md:text-6xl font-bold text-(--ink)">
			{page.title}
		</h1>

		<section class="bg-white border-2 border-(--ink) p-8 space-y-4">
			<h2 class="text-3xl font-bold text-(--ink)">{page.cornerstone.heading}</h2>
			{
				page.cornerstone.paragraphs.map((paragraph) => (
					<p class="text-(--ink)/90">{paragraph}</p>
				))
			}
			<img
				src={page.cornerstone.image.src}
				alt={page.cornerstone.image.alt}
				class="w-full h-80 object-cover border-2 border-(--ink) mt-4"
			/>
		</section>

		<section class="bg-white border-2 border-(--ink) p-8 space-y-4">
			<h2 class="text-3xl font-bold text-(--ink)">{page.sunday_study.heading}</h2>
			{
				page.sunday_study.paragraphs.map((paragraph) => (
					<p class="text-(--ink)/90">{paragraph}</p>
				))
			}
			<div class="grid md:grid-cols-3 gap-4 pt-2">
				{
					page.sunday_study.images.map((image) => (
						<img
							src={image.src}
							alt={image.alt}
							class="w-full h-72 object-cover border-2 border-(--ink)"
							loading="lazy"
						/>
					))
				}
			</div>
		</section>

		<section class="bg-white border-2 border-(--ink) p-8">
			<p class="text-(--ink)/90" set:html={page.cta_html}></p>
		</section>
	</div>
</Layout>
