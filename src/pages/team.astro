---
import Layout from "../layouts/Layout.astro";
import { Mail, Phone } from "lucide-react";
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.team;
---

<Layout title={page.title}>
	<div class="max-w-7xl mx-auto px-4 py-20 space-y-10">
		<div class="space-y-3">
			<h1 class="heading-eden-gold theme-display-font text-5xl md:text-6xl font-bold">
				{page.title}
			</h1>
			<p class="text-xl text-(--ink)/85 max-w-4xl">{page.intro}</p>
		</div>

		<div class="grid sm:grid-cols-2 xl:grid-cols-4 gap-6">
			{
				page.members.map((member) => (
					<article class="sketch-panel overflow-hidden flex flex-col">
						<img
							src={member.image.src}
							alt={member.image.alt}
							class="w-full h-64 object-cover border-b-2 border-(--ink)"
							loading="lazy"
						/>
						<div class="p-5 space-y-4 grow">
							<div>
								<h2 class="text-2xl font-bold text-(--ink) leading-tight">
									{member.name}
								</h2>
								<p class="text-(--teal) font-semibold">{member.role}</p>
							</div>
							<p class="text-(--ink)/85">{member.bio}</p>
							<div class="space-y-2 text-sm">
								<p>
									<a
										href={`mailto:${member.email}`}
										class="inline-flex items-center gap-2 font-semibold text-(--ink) underline decoration-(--eden) underline-offset-4"
									>
										<Mail size={15} />
										{member.email}
									</a>
								</p>
								{
									member.phone && member.phone_href && (
										<p>
											<a
												href={member.phone_href}
												class="inline-flex items-center gap-2 font-semibold text-(--ink) underline decoration-(--eden) underline-offset-4"
											>
												<Phone size={15} />
												{member.phone}
											</a>
										</p>
									)
								}
							</div>
						</div>
					</article>
				))
			}
		</div>
	</div>
</Layout>
