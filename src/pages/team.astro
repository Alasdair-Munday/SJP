import Layout from '../layouts/Layout.astro';
---

<Layout title="Team">
  <div class="max-w-5xl mx-auto px-4 py-20 space-y-8">
    <h1 class="font-['Newsreader'] text-5xl md:text-6xl font-bold text-[#0F2830]">Meet the Team</h1>

    <section class="bg-white border-2 border-[#0F2830] p-8 space-y-4">
      <h2 class="text-3xl font-bold text-[#0F2830]">St John's Staff Team</h2>
      <div class="space-y-4 text-[#0F2830]/90">
        <p><strong>Revd Luke Graham</strong> is the Priest in Charge.<br/>Email: <a href="mailto:luke@saintjohnspark.org" class="underline decoration-[#45B074] underline-offset-4">luke@saintjohnspark.org</a><br/>Telephone: <a href="tel:+447538172907" class="underline decoration-[#45B074] underline-offset-4">07538 172907</a></p>
        <p><strong>Kirsty Dronfield</strong> is our Centenary Project Children and Families' Leader.<br/>Email: <a href="mailto:kirsty.dronfield@centenaryproject.org.uk" class="underline decoration-[#45B074] underline-offset-4">kirsty.dronfield@centenaryproject.org.uk</a></p>
      </div>
    </section>

    <section class="bg-white border-2 border-[#0F2830] p-8 space-y-3">
      <h2 class="text-3xl font-bold text-[#0F2830]">Churchwardens and PCC</h2>
      <p class="text-[#0F2830]/90"><strong>Faustina Nyame</strong> is one of our churchwardens.</p>
      <p class="text-[#0F2830]/90"><strong>Elizabeth (Bess) Cooper</strong> is also a churchwarden and a Lay Reader.</p>
      <p class="text-[#0F2830]/90">Our PCC serves and supports the life and leadership of the church.</p>
    </section>
  </div>
</Layout>
