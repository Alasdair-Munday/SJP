---
import Layout from "../layouts/Layout.astro";

const photos = [
  {
    src: "/images/community-park-gathering-1.jpg",
    alt: "Community gathering in the park with bunting and seated groups",
    label: "Community Gathering"
  },
  {
    src: "/images/community-park-gathering-2.jpg",
    alt: "Church building and community enjoying outdoor activities",
    label: "Churchyard Event"
  },
  {
    src: "/images/community-fun-day.jpg",
    alt: "People taking part in races on the grass outside church",
    label: "Park Fun Day"
  },
  {
    src: "/images/kids-frisbee.jpg",
    alt: "Children playing games in the park",
    label: "Park Kids"
  },
  {
    src: "/images/kids-churchyard.jpg",
    alt: "Children and families around the churchyard games area",
    label: "Churchyard Games"
  },
  {
    src: "/images/outdoor carols.jpg",
    alt: "Community singing carols at the church entrance in December",
    label: "Seasonal Events"
  }
];
---

<Layout title="The Park">
  <div class="max-w-7xl mx-auto px-4 py-20">
    <div class="mb-12 space-y-4">
      <h1 class="page-heading page-heading--accent text-5xl md:text-6xl">
        The Park
      </h1>
      <p class="text-lg text-(--ink)/85 max-w-3xl">
        A glimpse into church life in Park: worship, friendship, family, and
        shared moments through the year.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Featured Photo: Baptism -->
      <div
        class="theme-card theme-card--interactive theme-card--strong border-[3px] p-4"
      >
        <div
          class="aspect-square overflow-hidden mb-4 theme-photo"
        >
          <img
            src="/images/baptism.jpg"
            alt="Baptism Celebration"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <p
          class="section-heading text-sm uppercase tracking-widest text-center"
        >
          New Life
        </p>
      </div>

      {
        photos.map((photo) => (
          <div class="theme-card theme-card--interactive theme-card--strong border-[3px] p-4">
            <div class="aspect-square overflow-hidden mb-4 theme-photo">
              <img
                src={photo.src}
                alt={photo.alt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            <p class="section-heading text-sm uppercase tracking-widest text-center">
              {photo.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
