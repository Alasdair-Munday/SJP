---
import Layout from "../layouts/Layout.astro";
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.the_park;
---

<Layout title={page.title}>
  <div class="max-w-7xl mx-auto px-4 py-20">
    <div class="mb-12 space-y-4">
      <h1 class="page-heading page-heading--accent text-5xl md:text-6xl">
        {page.title}
      </h1>
      <p class="text-lg text-(--ink)/85 max-w-3xl">
        {page.subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Featured Photo: Baptism -->
      <div
        class="theme-card theme-card--interactive theme-card--strong border-[3px] p-4"
      >
        <div
          class="aspect-square overflow-hidden mb-4 theme-photo"
        >
          <img
            src={page.featured_photo.src}
            alt={page.featured_photo.alt}
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <p
          class="section-heading text-sm uppercase tracking-widest text-center"
        >
          {page.featured_photo.label}
        </p>
      </div>

      {
        page.photos.map((photo) => (
          <div class="theme-card theme-card--interactive theme-card--strong border-[3px] p-4">
            <div class="aspect-square overflow-hidden mb-4 theme-photo">
              <img
                src={photo.src}
                alt={photo.alt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            <p class="section-heading text-sm uppercase tracking-widest text-center">
              {photo.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
