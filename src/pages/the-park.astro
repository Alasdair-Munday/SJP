---
import Layout from "../layouts/Layout.astro";

const photos = [
  {
    src: "/images/community-park-gathering-1.jpg",
    alt: "Community gathering in the park with bunting and seated groups",
    label: "Community Gathering"
  },
  {
    src: "/images/community-park-gathering-2.jpg",
    alt: "Church building and community enjoying outdoor activities",
    label: "Churchyard Event"
  },
  {
    src: "/images/community-fun-day.jpg",
    alt: "People taking part in races on the grass outside church",
    label: "Park Fun Day"
  },
  {
    src: "/images/kids-frisbee.jpg",
    alt: "Children playing games in the park",
    label: "Park Kids"
  },
  {
    src: "/images/kids-churchyard.jpg",
    alt: "Children and families around the churchyard games area",
    label: "Churchyard Games"
  },
  {
    src: "/images/carols-doorstep.jpg",
    alt: "Community singing carols at the church entrance in December",
    label: "Seasonal Events"
  }
];
---

<Layout title="The Park">
  <div class="max-w-7xl mx-auto px-4 py-20">
    <div
      class="flex items-end gap-4 mb-12 border-b-[3px] border-[#0F2830] pb-4"
    >
      <h1 class="text-6xl font-black uppercase tracking-tighter text-[#0F2830]">
        The Park
      </h1>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <!-- Featured Photo: Baptism -->
      <div
        class="bg-white border-[3px] border-[#0F2830] p-4 shadow-[8px_8px_0px_0px_#0F2830] hover:translate-y-1 hover:shadow-none transition-all"
      >
        <div
          class="aspect-square overflow-hidden mb-4 border-[3px] border-[#0F2830]"
        >
          <img
            src="/images/baptism.jpg"
            alt="Baptism Celebration"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
          />
        </div>
        <p
          class="font-bold text-[#0F2830] uppercase text-sm tracking-widest text-center"
        >
          New Life
        </p>
      </div>

      {
        photos.map((photo) => (
          <div class="bg-white border-[3px] border-[#0F2830] p-4 shadow-[8px_8px_0px_0px_#0F2830] hover:translate-y-1 hover:shadow-none transition-all">
            <div class="aspect-square overflow-hidden mb-4 border-[3px] border-[#0F2830]">
              <img
                src={photo.src}
                alt={photo.alt}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-500"
                loading="lazy"
              />
            </div>
            <p class="font-bold text-[#0F2830] uppercase text-sm tracking-widest text-center">
              {photo.label}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
