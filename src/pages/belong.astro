---
import Layout from "../layouts/Layout.astro";
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.belong;

const toneClasses: Record<string, string> = {
	eden: "hover:bg-(--eden-soft)",
	teal: "hover:bg-(--teal-soft)",
	gold: "hover:bg-(--gold-soft)",
};
---

<Layout title={page.title}>
	<div class="theme-belong max-w-5xl mx-auto px-4 py-20 space-y-10">
		<h1 class="heading-eden-gold theme-display-font text-5xl md:text-6xl font-bold">
			{page.title}
		</h1>

		<section class="grid md:grid-cols-3 gap-4">
			{
				page.highlights.map((item) => (
					<a
						href={item.href}
						class={`bg-white border-2 border-(--ink) p-6 transition-colors ${toneClasses[item.tone] ?? ""}`}
					>
						<h2 class="text-2xl font-bold text-(--ink) mb-2">{item.title}</h2>
						<p class="text-(--ink)/80">{item.description}</p>
					</a>
				))
			}
		</section>

		<section class="bg-white border-2 border-(--ink) p-8">
			<h2 class="text-3xl font-bold text-(--ink) mb-3">
				{page.sections.midweek.heading}
			</h2>
			{
				page.sections.midweek.paragraphs.map((paragraph, index) => (
					<p
						class={`text-(--ink)/90 ${index < page.sections.midweek.paragraphs.length - 1 ? "mb-3" : ""}`}
						set:html={paragraph}
					></p>
				))
			}
		</section>

		<section class="bg-white border-2 border-(--ink) p-8">
			<h2 class="text-3xl font-bold text-(--ink) mb-3">
				{page.sections.kids.heading}
			</h2>
			{
				page.sections.kids.paragraphs.map((paragraph, index) => (
					<p
						class={`text-(--ink)/90 ${index < page.sections.kids.paragraphs.length - 1 ? "" : "mt-2"}`}
						set:html={paragraph}
					></p>
				))
			}
		</section>

		<section class="bg-white border-2 border-(--ink) p-8">
			<h2 class="text-3xl font-bold text-(--ink) mb-3">
				{page.sections.youth.heading}
			</h2>
			{
				page.sections.youth.paragraphs.map((paragraph, index) => (
					<p
						class={`text-(--ink)/90 ${index === 0 ? "mb-3" : index === page.sections.youth.paragraphs.length - 1 ? "mt-2" : ""}`}
						set:html={paragraph}
					></p>
				))
			}
		</section>
	</div>
</Layout>
