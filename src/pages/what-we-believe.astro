---
import Layout from '../layouts/Layout.astro';
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.what_we_believe;
---

<Layout title={page.title}>
  <div class="max-w-4xl mx-auto px-4 py-20 space-y-8">
    <h1 class="page-heading page-heading--accent text-5xl md:text-6xl">{page.title}</h1>
    <figure class="theme-card theme-card--strong overflow-hidden">
      <img
        src={page.image.src}
        alt={page.image.alt}
        class="w-full h-72 object-cover"
        loading="lazy"
      />
    </figure>
    <div class="theme-card p-8 space-y-4">
      {page.paragraphs.map((paragraph, index) => (
        <p class:list={[index === 0 ? "text-lg" : "", "text-(--ink)/90"]}>{paragraph}</p>
      ))}
    </div>
  </div>
</Layout>
