---
import Layout from "../layouts/Layout.astro";
import { getSiteContent } from "../data/site-content";

const content = await getSiteContent();
const page = content.pages.serve;
---

<Layout title={page.title}>
	<div class="theme-serve max-w-5xl mx-auto px-4 py-20 space-y-10">
		<h1 class="heading-eden-gold theme-display-font text-5xl md:text-6xl font-bold">
			{page.title}
		</h1>

		<p class="text-xl text-(--ink)/90">{page.intro}</p>

		<div class="grid md:grid-cols-2 gap-6">
			{
				page.teams.map((team) => (
					<div class="bg-white border-2 border-(--ink) p-6 space-y-3">
						<h2 class="text-2xl font-bold text-(--ink)">{team.name}</h2>
						<p class="text-(--ink)/90">{team.description}</p>
					</div>
				))
			}
		</div>

		<p class="text-(--ink)/90" set:html={page.outro_html}></p>
	</div>
</Layout>
